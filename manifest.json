{
	"name":"Playify Downloader",
	"description":"Video Downloader",
	"version":"1.0",
	"manifest_version":3,
	"background":{
		"service_worker":"js/background.js"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"permissions":[
		"tabs",
		"downloads",
		"declarativeNetRequest",
		"declarativeNetRequestWithHostAccess",
		"activeTab",
		"scripting",
		"nativeMessaging",
		"storage"
	],
	"host_permissions": [
		"*://9xbuddy.com/*",
		"*://*/*"
	],
	"content_scripts":[
		{
			"matches":[
				"https://s.to/serie/stream/*/staffel-*/episode-*",
				"https://serien.sx/serie/stream/*/staffel-*/episode-*",
				"https://aniworld.to/anime/stream/*/staffel-*/episode-*",
				"https://s.to/serie/stream/*/filme/film-*",
				"https://serien.sx/serie/stream/*/filme/film-*",
				"https://aniworld.to/anime/stream/*/filme/film-*"
			],
			"js":["js/pages/s.to/episode.js"],
			"run_at":"document_start"
		},
		{
			"matches":[
				"https://s.to/serie/stream/*",
				"https://serien.sx/serie/stream/*",
				"https://aniworld.to/anime/stream/*",
				"https://s.to/serie/stream/*/staffel-*",
				"https://serien.sx/serie/stream/*/staffel-*",
				"https://aniworld.to/anime/stream/*/staffel-*",
				"https://s.to/serie/stream/*/filme",
				"https://serien.sx/serie/stream/*/filme",
				"https://aniworld.to/anime/stream/*/filme"
			],
			"exclude_matches":[
				"https://s.to/serie/stream/*/staffel-*/*",
				"https://serien.sx/serie/stream/*/staffel-*/*",
				"https://aniworld.to/anime/stream/*/staffel-*/*",
				"https://s.to/serie/stream/*/filme/*",
				"https://serien.sx/serie/stream/*/filme/*",
				"https://aniworld.to/anime/stream/*/filme/*"
			],
			"js":["js/pages/s.to/season.js"],
			"run_at":"document_idle"
		},


		{
			"matches":[
				"*://*/*"
			],
			"js":["js/extractVideo.js"],
			"css":["css/style.css"],
			"all_frames":true,
			"run_at":"document_idle"
		},
		{
			"matches":[
				"*://*/*"
			],
			"js":["js/extractM3u8.js"],
			"all_frames":true,
			"run_at":"document_start"
		},
		
		
		{
			"matches":[
				"https://9xbuddy.com/process*"
			],
			"js":["js/pages/9xbuddy.js"],
			"all_frames":true
		}
	],
	"icons":{
		"48":"icons/48.png",
		"256":"icons/256.png"
	}
}